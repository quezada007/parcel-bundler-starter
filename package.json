{
  "name": "parcel-bundler-starter",
  "version": "1.0.0",
  "description": "Parcel Bundler starter project",
  "main": "index.js",
  "scripts": {
    "dev": "npm run clean && parcel src/*.html --open",
    "build": "npm run clean && parcel build src/*.html",
    "clean": "rimraf dist .cache",
    "lint": "eslint src/js/*; exit 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quezada007/parcel-bundler-starter.git"
  },
  "keywords": [
    "parcel",
    "sass",
    "scss"
  ],
  "author": "Jose Quezada",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "eslint": "^5.5.0",
    "ghooks": "^2.0.4",
    "node-sass": "^4.9.3",
    "parcel-bundler": "^1.9.7",
    "postcss-modules": "^1.3.2",
    "rimraf": "^2.6.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "IE 10"
  ],
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint"
    }
  }
}
